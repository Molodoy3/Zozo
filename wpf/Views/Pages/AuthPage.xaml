<Page x:Class="wpf.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel x:Name="form" Style="{StaticResource StackPanelMain}">
            <TextBlock>Введите логин</TextBlock>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <TextBlock>Введите пароль</TextBlock>
            <PasswordBox x:Name="PasswordTextBox"></PasswordBox>
            <Button Click="AuthButtonClick" HorizontalAlignment="Center" Width="209">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
