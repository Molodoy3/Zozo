<Page x:Class="wpf.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="AuthPage">

    <Grid>
        <StackPanel x:Name="form" Style="{StaticResource StackPanelMain}">
            <TextBlock Style="{StaticResource Title}">Вход</TextBlock>
            <TextBlock>Введите логин</TextBlock>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <TextBlock>Введите пароль</TextBlock>
            <PasswordBox x:Name="PasswordTextBox"></PasswordBox>
            <Button Click="AuthButtonClick" HorizontalAlignment="Center" Width="300">Войти</Button>
            <TextBlock TextAlignment="Right" Margin="0 5 0 0"><Hyperlink NavigateUri="/Views/Pages/Registration.xaml" FontSize="10" FontWeight="Medium" Foreground="blue">Регистрация</Hyperlink></TextBlock>
        </StackPanel>
    </Grid>
</Page>
