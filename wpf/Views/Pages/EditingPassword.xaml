<Page x:Class="wpf.Views.Pages.EditingPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Изменение пароля">

    <Grid>
        <ScrollViewer Padding="0 15">
            <StackPanel x:Name="form" Style="{StaticResource StackPanelMain}" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource Title}">Изменение пароля</TextBlock>
                <TextBlock>Введите старый пароль</TextBlock>
                <PasswordBox x:Name="OldPasswordTextBox"></PasswordBox>
                <TextBlock>Введите новый пароль</TextBlock>
                <PasswordBox x:Name="PasswordTextBox"></PasswordBox>
                <TextBlock>Повторите новый пароль</TextBlock>
                <PasswordBox x:Name="PasswordDoubleTextBox"></PasswordBox>
                <Button Style="{StaticResource ButtonBlue}" Click="SaveButtonClick" HorizontalAlignment="Center" Width="300">Сохранить</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
